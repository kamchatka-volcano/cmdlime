include(FetchContent)
Set(FETCHCONTENT_QUIET FALSE)

if (NOT TARGET sfun AND NOT sfun_FOUND)
    FetchContent_Declare(
            sfun
            GIT_REPOSITORY https://github.com/kamchatka-volcano/sfun.git
            GIT_TAG        v1.0
            GIT_SHALLOW    ON
            GIT_PROGRESS TRUE
    )
    FetchContent_MakeAvailable(sfun)
endif()
