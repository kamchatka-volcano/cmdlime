include(FetchContent)
Set(FETCHCONTENT_QUIET FALSE)

if (NOT GSL_FOUND)
    FetchContent_Declare(
            gsl
            GIT_REPOSITORY https://github.com/microsoft/GSL
            GIT_TAG        v4.0.0
            GIT_SHALLOW    ON
            GIT_PROGRESS TRUE
    )
    FetchContent_MakeAvailable(GSL)
endif()